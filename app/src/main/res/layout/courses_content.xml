<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="303dp"
    android:layout_height="132dp"
    android:translationX="20dp">

    <LinearLayout
        android:background="#5045A0CA"
        android:elevation="4dp"
        android:layout_width="303dp"
        android:layout_height="132dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewCourseName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Название курса" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="161dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewPriceCourse"
                    android:layout_width="163dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="99999 руб"
                    android:textColor="#45A0CA"
                    android:textSize="20sp"
                    android:translationX="20dp"
                    android:translationY="20dp" />
            </LinearLayout>

            <Button
                android:id="@+id/button3"
                style="@style/Widget.Material3.Button"
                android:layout_width="116dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#45A0CA"
                android:ellipsize="middle"
                android:insetLeft="15dp"
                android:insetTop="15dp"
                android:insetRight="15dp"
                android:insetBottom="15dp"
                android:shadowColor="#050202"
                android:text="Купить"
                android:textColorLink="#45A0CA"
                android:textSize="16sp"
                android:visibility="visible"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>